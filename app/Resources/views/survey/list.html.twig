{# app/Resources/views/survey/form.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Questionnaire{% endblock %}

{% block content %}
	<ul id="survey-list">

    {% for survey in surveys %}
		<li class="survey-item"><a href="{{ path('new-survey', {'slug': survey.slug}) }}">{{ survey.title }}</a></li>
		<a href="{{path('edit-survey',{'slug': survey.slug}) }}"> Modifier </a>
		<a href="{{ path('delete-survey',{'slug': survey.slug}) }}" onclick="return confirm('are u sure?')">Supprimer</a>
		{% else %}
		<h1> Pas de sondages </h1>

    {% endfor %}
    	<a href="{{path('add-survey') }}"> Cr√©er un nouveau sondage </a>
	</ul>
{% endblock %}